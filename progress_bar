import time
import sys
import threading
import random
count_clean_simb = 8
symbols = ['(-.-)Zz','(-.o)  ','(o.o)  ','(O.o)  ','(O.O)  ','(o.O)  ','(o.o)  ','(-.-)zZ','(-.-)Zz','(-.-)zZ']

def spinner():
    while True:
        for symbol in symbols:
            sys.stdout.write('\r' + symbol)
            sys.stdout.flush()
            time.sleep(0.45)

spinner_thread = threading.Thread(target=spinner)
spinner_thread.daemon = True  # чтобы поток остановился, когда основной поток завершится
spinner_thread.start()

# основной код программы
for i in range(10):
    sys.stdout.write('\r' + ' ' * count_clean_simb )  # очистка предыдущего символа крутилки
    sys.stdout.flush()
    print(f"Файл №{i} отработан")
    time.sleep(random.randint(1,5))
    sys.stdout.write('\r' + ' ' * count_clean_simb )  # очистка предыдущего символа крутилки
    sys.stdout.flush()
    print(f"Файл №{i} сохранен")
    time.sleep(random.randint(1,5))

sys.stdout.write('\r' + ' ' * count_clean_simb )  # очистка предыдущего символа крутилки
sys.stdout.flush()
print("Программа завершена")
